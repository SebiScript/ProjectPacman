<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectPacman.Views"
    xmlns:vm="using:ProjectPacman.ViewModels"
    x:Class="ProjectPacman.Views.MenuView"
    x:DataType="vm:MenuViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Grid.Background>
            <ImageBrush Source="avares://ProjectPacman/Assets/Backgrounds/Fondo.png"
                        Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
        <TextBlock Text="PAC-MAN" FontSize="74" HorizontalAlignment="Center" FontFamily="{StaticResource PacFont}"/>
        <Button Content="Jugar" FontFamily="{StaticResource PacFont}" HorizontalAlignment="Center" Command="{Binding StartGameCommand}" Width="120" Height="40" Background="Green"/>
        <Button Content="Score" FontFamily="{StaticResource PacFont}" HorizontalAlignment="Center" Command="{Binding StartGameCommand}" Width="120" Height="40" Background="Green"/>
        <Button Content="Exit" FontFamily="{StaticResource PacFont}" HorizontalAlignment="Center" Command="{Binding StartGameCommand}" Width="120" Height="40" Background="Green"/>
    </StackPanel>
    </Grid>
</UserControl>